<main> 
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   <div class="page">
      <div class="header">
        <h1 class="logo">Bugzilla</h1>
        <p>Sign up to track your bugs and projects.</p>
      </div>
      <div class="container">
        <form action="">         
          <%= f.label :full_name %>
          <%= f.text_field :full_name, autofocus: true, autocomplete: "first_name", placeholder: "Full Name", class: 'input' %> 
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "E-mail", class: 'input' %>
          <%= f.label :role %>
          <%= f.select :role, options_for_select(User.roles.map {|key, value| [key.humanize, key]}, 0), {}, {:class => 'browser-default custom-select form-control mb-4'} %>
          <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <button> <%= f.submit "Sign up" ,data:{turbo: false}%></button>
        </form>
      </div>
  </div>
  <div class="option">
     <p>Have an account?</p>
    
      <button><%= render "devise/shared/links" %><button>
  
  </div>
  
 
<% end %>


</main>
